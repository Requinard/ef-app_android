<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorForeground">@color/textBlack</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Header" parent="AppTheme">
        <item name="android:background">@color/primaryDarker</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Header.Sub" parent="AppTheme.Header">
        <item name="android:background">@color/primaryLight</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme">
        <item name="android:radius">5dp</item>
        <item name="android:background">@color/accentDark</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>
    <style name="appcompatDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="RequinardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#656565</item>
        <item name="colorPrimaryDark">#262626</item>
        <item name="colorAccent">#FFFe00</item>
        <item name="android:colorForeground">@color/textBlack</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/iconColor</item>
    </style>

</resources>
